/* components/LL/ajaxLoading.wxss */

.updata {
  position: fixed;
  width: 100%;
  left: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100000
}

.updata-content {
  margin: 252rpx auto 0;
  width: 576rpx;
  background: #fff;
  border-radius: 20rpx;
  padding-bottom: 46rpx;
}

.updata-content-img {
  padding-top: 46rpx;
  text-align: center;
}

.updata-content-img image {
  height: 276rpx;
  width: 392rpx;
}

.updata-content-txt {
  font-size: 36rpx;
  color: #6a6fde;
  line-height: 48rpx;
  text-align: center;
}

.updata-content-list {
  padding-top: 20rpx;
}

.updata-content-item {
  padding-top: 8rpx;
  padding-left: 82rpx;
  display: flex;
  /* justify-content: center; */
  align-items: center;
}

.updata-content-item-txt {
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.80);
  line-height: 48rpx;
}

.updata-content-item-radius {
  display: inline-block;
  height: 12rpx;
  width: 12rpx;
  background: rgba(0,0,0,0.20);
  border-radius: 50%;
  margin-right: 16rpx;
}

.updata-content-buttom {
  margin: 64rpx auto 0;
  height: 66rpx;
  width: 368rpx;
  background: #6a6fde;
  border-radius: 32rpx;
  line-height: 66rpx;
  text-align: center;
  font-size: 28rpx;
  color: #fff;
}
